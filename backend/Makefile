.PHONY: help run build test clean docker-build docker-run

# Default target
help:
	@echo "Stori Backend - Available Commands:"
	@echo "  make run           - Run the server locally"
	@echo "  make build         - Build the server binary"
	@echo "  make test          - Run all tests"
	@echo "  make test-coverage - Run tests with coverage"
	@echo "  make clean         - Clean build artifacts"
	@echo "  make docker-build  - Build Docker image"
	@echo "  make docker-run    - Run Docker container"
	@echo "  make lint          - Run linter"

# Run the server
run:
	@echo "ğŸš€ Starting server..."
	go run main.go

# Build the server binary
build:
	@echo "ğŸ”¨ Building server..."
	go build -o server main.go
	@echo "âœ… Build complete: ./server"

# Run all tests
test:
	@echo "ğŸ§ª Running tests..."
	go test -v ./...

# Run tests with coverage
test-coverage:
	@echo "ğŸ§ª Running tests with coverage..."
	go test -cover ./...
	go test -coverprofile=coverage.out ./...
	go tool cover -html=coverage.out -o coverage.html
	@echo "âœ… Coverage report generated: coverage.html"

# Clean build artifacts
clean:
	@echo "ğŸ§¹ Cleaning..."
	rm -f server coverage.out coverage.html
	@echo "âœ… Clean complete"

# Build Docker image
docker-build:
	@echo "ğŸ³ Building Docker image..."
	docker build -t stori-backend:latest .
	@echo "âœ… Docker image built: stori-backend:latest"

# Run Docker container
docker-run:
	@echo "ğŸ³ Running Docker container..."
	docker run -p 8080:8080 \
		-e PORT=8080 \
		-e CORS_ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000" \
		stori-backend:latest

# Run linter
lint:
	@echo "ğŸ” Running linter..."
	go vet ./...
	@echo "âœ… Linting complete"


